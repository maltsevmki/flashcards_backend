# Flake8 Configuration
# Note: Flake8 doesn't support pyproject.toml natively, so we use .flake8

[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity (McCabe)
max-complexity = 10

# Select specific error codes to check
select = E,F,W,C90

# Ignore specific error codes
ignore = 
    # Line too long (handled by formatter)
    E501,
    # Whitespace before ':'
    E203,
    # Line break before binary operator
    W503,
    # Missing whitespace around arithmetic operator
    E226,
    # Trailing whitespace
    W291,
    # Blank line contains whitespace
    W293,
    # Blank line at end of file
    W391,

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    htmlcov,
    migrations,

# Per-file ignores
per-file-ignores = 
    # Allow unused imports in __init__.py
    __init__.py: F401
    # Allow longer lines in tests
    tests/*: E501
    # Allow assert in tests
    tests/*: S101

# Show source code for each error
show-source = true

# Count errors
count = true

# Statistics
statistics = true

